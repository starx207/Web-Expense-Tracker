@model ExpenseTracker.Models.PayeeCrudVm

@{
    ViewData["Title"] = "Edit";
    SelectList categories = new SelectList(Model.CategoryOptions, Model.CategoryName);
}

<h2>Edit</h2>

<h4>Payee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NavId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EffectiveFrom" class="control-label"></label>
                <input asp-for="EffectiveFrom" class="form-control datepicker" />
                <span asp-validation-for="EffectiveFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <select asp-for="CategoryName" class="form-control" asp-items="@categories">
                    <option value="">-- Please Select --</option>
                </select>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
