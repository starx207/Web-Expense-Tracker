            </div>
            <div class="form-group">
                <label asp-for="EffectiveFrom" class="control-label"></label>
                <input asp-for="EffectiveFrom" class="form-control datepicker" />
                <span asp-validation-for="EffectiveFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<BudgetType>()" class="form-control">
                    <option value="">-- Please Select --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
