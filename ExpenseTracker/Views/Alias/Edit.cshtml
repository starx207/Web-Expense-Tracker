@model ExpenseTracker.Models.AliasCrudVm

@{
    ViewData["Title"] = "Edit";
    SelectList payees = new SelectList(Model.PayeeOptions, 
        nameof(ExpenseTracker.Models.Payee.ID), 
        nameof(ExpenseTracker.Models.Payee.Name), 
        Model.PayeeID);
}

<h2>Edit</h2>

<h4>Alias</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayeeID" class="control-label"></label>
                <select asp-for="PayeeID" class="form-control" asp-items="@payees">
                    <option value="">-- Please Select --</option>
                </select>
                <span asp-validation-for="PayeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Payee">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
